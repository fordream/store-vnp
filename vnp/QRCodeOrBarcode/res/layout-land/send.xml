<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/LinearLayout1"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg2" android:orientation="vertical"
	android:paddingBottom="10dip" android:paddingLeft="20dip"
	android:paddingRight="20dip" android:paddingTop="10dip">
    <EditText android:id="@+id/editText1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" android:hint="Search Name" android:background="@drawable/btn_indicator" android:textColor="@color/white" android:textSize="14dip" android:typeface="monospace" android:paddingLeft="10dp" android:paddingRight="10dp">
        <requestFocus></requestFocus>
    </EditText>
	<ListView android:divider="#dfdfdf" android:dividerHeight="1.0sp"
		android:cacheColorHint="#00000000" android:layout_alignParentLeft="true"
		android:id="@+id/listView1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_above="@+id/linearLayout3" android:layout_below="@+id/editText1"></ListView>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout3" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:orientation="horizontal">
		<Button android:id="@+id/button2" android:layout_height="wrap_content"
			android:background="@drawable/btn_indicator" android:layout_width="50dip"
			android:layout_marginTop="10dip" android:layout_marginRight="10dip"
			android:textColor="@color/white" android:textSize="15dip"
			android:typeface="serif" android:text="Reset"></Button>
		<Button android:typeface="serif" android:textColor="@color/white"
			android:text="Button" android:layout_marginTop="10dip"
			android:layout_height="wrap_content" android:id="@+id/button1"
			android:background="@drawable/btn_indicator" android:layout_width="fill_parent"></Button>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center"
		android:id="@+id/linearLayout2">
		<ProgressBar android:id="@+id/progressBar1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="?android:attr/progressBarStyleLarge"></ProgressBar>
	</LinearLayout>

</RelativeLayout>