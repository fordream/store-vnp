<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg2"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/result_border"
            android:gravity="center"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView1id"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/result_result" >

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="10dip"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:typeface="serif" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/Button03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn3mail" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/Button03"
                android:background="@drawable/btnsms" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/idResult_MENU"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingLeft="10dip" >

            <Button
                android:id="@+id/Button02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:typeface="serif" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="Web"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:typeface="serif" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="SMS"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:typeface="serif" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>