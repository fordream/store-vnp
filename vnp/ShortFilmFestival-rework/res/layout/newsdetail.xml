<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg"
    android:orientation="vertical" >

    <com.vnp.shortfirmfestival_rework.view.HeaderView
        android:id="@+id/headerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.vnp.shortfirmfestival_rework.view.HeaderView>

    <WebView
        android:id="@+id/new_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerView1"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/new_scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerView1"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp" >

            <TextView
                android:id="@+id/new_detail_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_detail_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_detail_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="TextView"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/new_detail_progressbar"
        android:layout_width="@dimen/dimen_35dp"
        android:layout_height="@dimen/dimen_35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <com.vnp.shortfirmfestival_rework.view.ShareView
        android:id="@+id/shareView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerView1" >
    </com.vnp.shortfirmfestival_rework.view.ShareView>

</RelativeLayout>