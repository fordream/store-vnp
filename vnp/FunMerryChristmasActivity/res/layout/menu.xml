<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@drawable/board">
    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="200dip" android:layout_centerInParent="true">
        <Button android:layout_width="fill_parent" android:id="@+id/button1" android:layout_height="wrap_content" android:text="Play"></Button>
        <Button android:layout_width="fill_parent" android:id="@+id/button2" android:layout_height="wrap_content" android:text="scores"></Button>
        <Button android:layout_width="fill_parent" android:id="@+id/button3" android:layout_height="wrap_content" android:text="Option" ></Button>
        <Button android:layout_width="fill_parent" android:id="@+id/button4" android:layout_height="wrap_content" android:text="Help"></Button>
        <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Exit" android:id="@+id/btnExit"></Button>
    </LinearLayout>
    
</RelativeLayout>
