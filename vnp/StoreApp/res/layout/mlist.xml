<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.com.cnc.common.android.views1.HeaderView
        android:id="@+id/headerView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <org.com.cnc.common.android.views1.ButtonSearch
            android:id="@+id/buttonSearch1"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip" />
    </org.com.cnc.common.android.views1.HeaderView>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headerView1"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarThumbVertical="@drawable/add_click"
        android:scrollbarTrackVertical="@drawable/thum" >
    </ListView>

    <org.com.cnc.common.android.views1.SearchWiget
        android:id="@+id/searchWiget1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone" >
    </org.com.cnc.common.android.views1.SearchWiget>

</RelativeLayout>