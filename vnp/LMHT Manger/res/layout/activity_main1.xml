<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.widget.SlidingPaneLayout
        android:id="@+id/sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="@dimen/dimen_240dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#000000"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/menuslide_header"
                android:layout_width="@dimen/dimen_240dp"
                android:layout_height="@dimen/dimen_55dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:background="@drawable/m1" />
            </LinearLayout>

            <ListView
                android:id="@+id/left_drawer_list"
                android:layout_width="@dimen/dimen_240dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/menuslide_header"
                android:choiceMode="singleChoice" />
            <!--
               android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:orientation="vertical" >

            <!--
        <FrameLayout
            android:id="@+id/mFrament"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:orientation="vertical" >
        </FrameLayout>
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:background="@drawable/btn_red" >

                <LinearLayout
                    android:id="@+id/Menu_left"
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:background="@drawable/icon_setting_b" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Menu_right"
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:background="@drawable/button_more" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/menu_enable_edit"
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:layout_toLeftOf="@+id/Menu_right"
                    android:background="@drawable/xem_edit_mode"
                    android:button="@null"
                    android:gravity="center"
                    android:orientation="vertical" >
                </CheckBox>

                <TextView
                    android:id="@+id/header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Medium Text"
                    android:textSize="@dimen/dimen_18dp" />
            </RelativeLayout>

            <GridView
                android:id="@+id/main_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:numColumns="4" >
            </GridView>
        </LinearLayout>
    </android.support.v4.widget.SlidingPaneLayout>

    <org.com.vnp.lmhtmanager.view.MoreView
        android:id="@+id/main_more_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>