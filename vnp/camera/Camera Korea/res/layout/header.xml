<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_45dp"
    android:background="@drawable/headerbg" >

    <TextView
        android:id="@+id/header_text"
        style="@style/txt_style_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/main" />

    <ImageButton
        android:id="@+id/header_btn_left"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_6dp"
        android:background="@null"
        android:padding="@dimen/dimen_6dp" />

    <ImageButton
        android:id="@+id/header_btn_right"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_6dp"
        android:background="@null"
        android:padding="@dimen/dimen_6dp"
        android:src="@drawable/xml_setting" />

</RelativeLayout>