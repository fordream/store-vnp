<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices. <item name="android:textSize">@dimen/dimen_13dp</item>
        <item name="android:textColor">@android:color/white</item>
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
       
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="txt_style">
        <item name="android:textSize">@dimen/dimen_13dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="txt_style_bold" parent="txt_style">
        <item name="android:textSize">@dimen/dimen_13dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button" parent="txt_style">
        <item name="android:textStyle">bold</item>
    </style>

</resources>