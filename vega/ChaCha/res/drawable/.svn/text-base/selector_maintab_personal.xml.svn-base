<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active -->
    <item android:state_selected="true" android:state_focused="false"
        android:state_pressed="false" android:drawable="@drawable/bg_tabbar_hover" />
    <!-- Inactive -->
    <item android:state_selected="false" android:state_focused="false"
        android:state_pressed="false" android:drawable="@drawable/bg_tabbar_5" />
    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/bg_tabbar_hover" />
    <!-- Selected tab -->
    <item android:state_focused="true" android:state_selected="true"
        android:state_pressed="false" android:drawable="@drawable/bg_tabbar_hover" />
</selector>