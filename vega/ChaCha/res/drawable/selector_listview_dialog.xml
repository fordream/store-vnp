<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active -->
    <item android:state_selected="true" android:state_focused="false"
        android:state_pressed="false" android:drawable="@color/listview_dialog_focus" />
    <!-- Inactive -->
    <item android:state_selected="false" android:state_focused="false"
        android:state_pressed="false" android:drawable="@color/listview_dialog_normal" />
    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@color/listview_dialog_focus" />
    <!-- Selected tab -->
    <item android:state_focused="true" android:state_selected="true"
        android:state_pressed="false" android:drawable="@color/listview_dialog_focus" />
</selector>