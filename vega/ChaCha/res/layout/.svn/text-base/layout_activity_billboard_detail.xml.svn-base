<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_root"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header" >

        <Button
            android:id="@+id/btnBillboardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:text="@string/music"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_button_on_title_bar" />

        <TextView
            android:id="@+id/feature_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/billboard"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_title_bar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_segment_bg" >

        <vn.com.vega.music.view.custom.SegmentedRadioGroup
            android:id="@+id/feature_billboard_detail_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <vn.com.vega.music.view.custom.SegmentedControlButton
                android:id="@+id/billboard_tab_song"
                android:button="@null"
                android:checked="true"
                android:minHeight="30dip"
                android:minWidth="40dip"
                android:text="Bài hát" />

            <vn.com.vega.music.view.custom.SegmentedControlButton
                android:id="@+id/billboard_tab_album"
                android:button="@null"
                android:minHeight="30dip"
                android:minWidth="40dip"
                android:text="Album" />

            <vn.com.vega.music.view.custom.SegmentedControlButton
                android:id="@+id/billboard_tab_video"
                android:button="@null"
                android:minHeight="30dip"
                android:minWidth="40dip"
                android:text="Video" />
        </vn.com.vega.music.view.custom.SegmentedRadioGroup>
    </RelativeLayout>

    <!-- Tab Content View -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/view_billboard_help"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/search_help_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/search_ico_margintop"
                    android:src="@drawable/ic_search_large" />

                <TextView
                    android:id="@+id/search_help_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search_help_icon"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/textsize_big" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_billboard_load"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ProgressBar
                    android:id="@+id/feature_list_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/feature_list_progress"
                    android:layout_centerHorizontal="true"
                    android:text="@string/loading" />
            </RelativeLayout>

            <ListView
                android:id="@+id/billboard_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dip"
                android:fadingEdge="none" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>