<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:background="#000000" android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:background="@drawable/bg_root"
		android:layout_height="fill_parent"
		android:padding="0dp">
		<TabWidget android:id="@android:id/tabs"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:padding="0dp" android:background="#0000" android:visibility="gone"
			android:layout_weight="0" />
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:padding="0dp" android:layout_marginBottom="-8dp" android:layout_weight="1">
		</FrameLayout>
		<LinearLayout android:orientation="horizontal" android:id="@+id/tab_holder_bottom_region"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_gravity="center">
			<LinearLayout android:layout_width="wrap_content"
				android:id="@+id/holder_music"
				android:layout_gravity="bottom"
				android:background="@drawable/selector_maintab_music"
				android:layout_height="wrap_content" android:gravity="center"
				android:orientation="vertical">
				<Button android:id="@+id/tab_holder_music_btn"
					android:layout_marginTop="3dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/selector_maintab_music_btn"/>
				<TextView 
					android:textSize="10sp"
					android:layout_marginTop="2dp"
					android:id="@+id/tab_holder_music_txt"
					android:layout_width="wrap_content"
					android:textColor="#808080"
					android:layout_height="wrap_content"
					android:text="Âm nhạc"/>	
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_gravity="bottom"
				android:id="@+id/holder_search"
				android:background="@drawable/selector_maintab_search"
				android:layout_height="wrap_content" android:gravity="center"
				android:orientation="vertical">
				<Button android:id="@+id/tab_holder_search_btn"
					android:layout_marginTop="3dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/selector_maintab_search_btn"/>
				<TextView 
					android:textSize="10sp"
					android:layout_marginTop="2dp"
					android:layout_width="wrap_content"
					android:textColor="#808080"
					android:id="@+id/tab_holder_search_txt"
					android:layout_height="wrap_content"
					android:text="Tìm kiếm"/>		
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_gravity="bottom"
				android:id="@+id/holder_play"
				android:layout_height="wrap_content" android:gravity="center"
				android:background="@drawable/selector_maintab_player"
				android:orientation="vertical">
				<Button android:id="@+id/tab_holder_play_btn" android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/selector_maintab_player_btn"/>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center"
				android:id="@+id/holder_playlist"
				android:layout_gravity="bottom"
				android:background="@drawable/selector_maintab_playlist"
				android:orientation="vertical">
				<Button android:id="@+id/tab_holder_my_playlist_btn"
					android:layout_marginTop="3dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:background="@drawable/selector_maintab_playlist_btn"/>
				<TextView 
					android:textSize="10sp"
					android:layout_marginTop="2dp"
					android:textColor="#808080"
					android:id="@+id/tab_holder_my_playlist_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="My playlist"/>		
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center"
				android:id="@+id/holder_personal"
				android:layout_gravity="bottom"
				android:background="@drawable/selector_maintab_personal"
				android:orientation="vertical">
				<Button android:id="@+id/tab_holder_setting_btn"
					android:layout_marginTop="3dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:background="@drawable/selector_maintab_personal_btn"/>
				<TextView 
					android:textSize="10sp"
					android:layout_marginTop="2dp"
					android:layout_width="wrap_content"
					android:id="@+id/tab_holder_personal_txt"
					android:textColor="#808080"
					android:layout_height="wrap_content"
					android:text="Cá nhân"/>		
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</TabHost>