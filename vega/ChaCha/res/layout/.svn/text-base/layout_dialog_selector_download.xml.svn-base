<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:background="#343130"
	android:layout_margin="0dp" android:layout_height="wrap_content">
	<RelativeLayout android:layout_width="fill_parent"
		android:padding="2dp" android:layout_alignParentTop="true"
		android:id="@+id/my_playlist_download_selector_region_top"
		android:layout_height="@dimen/topbar_height" android:background="@drawable/bg_header">
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/my_playlist_download_selector_default_btn"
			android:layout_marginLeft="5dp" android:layout_centerVertical="true"
			android:layout_alignParentLeft="true" android:background="#00000000" />
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:singleLine="true"
			android:textSize="20sp" android:textColor="@android:color/white"
			android:text="@string/my_playlist_download_selector_title_txt"
			android:layout_centerInParent="true" />
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/my_playlist_download_selector_close_btn"
			android:layout_marginRight="5dp" android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:background="@drawable/selector_button_dialog_close" />
	</RelativeLayout>

	<LinearLayout android:gravity="center"
		android:layout_below="@id/my_playlist_download_selector_region_top"
		android:layout_margin="20dp" android:id="@+id/my_playlist_download_selector_empty"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_centerInParent="true">
		<ImageView android:src="@drawable/ic_search_large"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:layout_width="250dp" android:gravity="center"
			android:text="@string/my_playlist_empty_msg" android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>


	<ListView android:id="@+id/my_playlist_download_selector_listview"
		android:layout_below="@id/my_playlist_download_selector_empty"
		android:divider="@color/popup_divider" android:dividerHeight="1dp"
		android:layout_width="fill_parent"
		android:cacheColorHint="#00000000" android:fadingEdge="none"
		android:layout_height="wrap_content">
	</ListView>




</RelativeLayout>
