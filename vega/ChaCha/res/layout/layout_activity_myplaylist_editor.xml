<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tlv="http://schemas.android.com/apk/res/vn.com.vega.chacha"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_root" >

    <RelativeLayout
        android:id="@+id/my_playlist_editor_region_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_header"
        android:padding="2dp" >

        <Button
            android:id="@+id/playlist_editor_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_back"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/my_playlist_editor_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/my_playlist_editor_title_txt"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_playlist_editor_region_second"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_playlist_editor_region_top"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_search_bg" >

        <EditText
            android:id="@+id/my_playlist_editor_name_edt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:hint="@string/name_hint"
            android:singleLine="true"
            android:textSize="16sp" />

        <Button
            android:id="@+id/editor_clear_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/my_playlist_editor_name_edt"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/ic_search_cancel" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_playlist_editor_divider_region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_playlist_editor_region_second"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:padding="2dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_playlist_editor_region_botton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_toolbar_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_delete"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_default"
                android:background="@drawable/ic_button_delete"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_default"
                android:clickable="false"
                android:text="@string/delete"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/delete_layout"
            android:background="@drawable/selector_button_save"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_default"
                android:background="@drawable/ic_button_save"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_default"
                android:clickable="false"
                android:text="@string/save"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--
	<ListView android:id="@+id/my_playlist_editor_listview"
		android:layout_below="@id/my_playlist_editor_divider_region"
		android:layout_above="@id/my_playlist_editor_region_botton"
		android:divider="#00000000" android:layout_marginLeft="1dp"
		android:listSelector="@android:color/transparent"
		android:fadingEdge="none"
		android:layout_marginRight="1dp" android:layout_width="fill_parent"
		android:cacheColorHint="#00000000" android:layout_height="wrap_content">
	</ListView>

    -->

    <com.commonsware.cwac.tlv.TouchListView
        android:id="@+id/my_playlist_editor_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/my_playlist_editor_region_botton"
        android:layout_below="@id/my_playlist_editor_divider_region"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:cacheColorHint="#00000000"
        android:clipChildren="true"
        android:divider="#00000000"
        android:drawSelectorOnTop="false"
        tlv:expanded_height="60dip"
        android:fadingEdge="none"
        tlv:grabber="@+id/my_playlist_row_grabber"
        android:listSelector="@android:color/transparent"
        tlv:normal_height="60dip"
        tlv:remove_mode="none" >
    </com.commonsware.cwac.tlv.TouchListView>

    <LinearLayout
        android:id="@+id/my_playlist_editor_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_large" />

        <TextView
            android:id="@+id/my_playlist_detail_empty_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách này không có bài hát nào" >
        </TextView>
    </LinearLayout>

</RelativeLayout>