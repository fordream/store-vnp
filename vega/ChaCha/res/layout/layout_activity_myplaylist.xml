<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:background="@drawable/bg_root"
	android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent"
		android:padding="2dp" android:layout_alignParentTop="true"
		android:id="@+id/my_playlist_region_top" android:layout_height="wrap_content"
		android:background="@drawable/bg_header">
		<Button android:layout_height="wrap_content"
			android:layout_marginLeft="5dp" android:background="@drawable/selector_button_download"
			android:layout_width="wrap_content" android:id="@+id/my_playlist_download_btn"
			android:textSize="12sp"
			android:text="@string/download_playlist" android:textColor="#000000"
			android:paddingBottom="1dp"
			android:layout_centerVertical="true" android:layout_alignParentLeft="true" />
		<TextView android:layout_height="wrap_content" android:id="@+id/my_playlist_title_txt"
			android:layout_width="wrap_content" android:singleLine="true"
			android:layout_marginLeft="10dp" android:textSize="20sp"
			android:textColor="@android:color/white"
			android:text="@string/my_playlist_title_txt"
			android:layout_centerInParent="true" />

		<Button android:layout_width="wrap_content"
			android:text="9"
			android:textColor="#bd2020"
			android:textStyle="bold"
			android:visibility="gone"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:layout_centerVertical="true" android:id="@+id/notification_btn"
			android:background="@drawable/bg_button_notification_normal"
			android:layout_marginRight="7dp" />

		<ImageView android:layout_width="wrap_content"
			android:visibility="gone"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:id="@+id/downloading_img" android:background="@drawable/selector_button_downloading"
			android:layout_marginRight="7dp" />
	</RelativeLayout>



	<RelativeLayout android:visibility="gone"
		android:clickable="true" android:layout_alignParentBottom="true"
		android:padding="5dp" android:background="@drawable/bg_toolbar"
		android:id="@+id/my_playlist_region_botton" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<ProgressBar android:progressDrawable="@drawable/drawable_seekbar_blue"
			android:layout_height="10dp" android:clickable="true"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true"
			android:layout_width="200dp" style="?android:attr/progressBarStyleHorizontal"
			android:id="@+id/my_playlist_total_progress_bar"></ProgressBar>
		<TextView android:id="@+id/my_playlist_total_progress_txt"
			android:clickable="true" android:text="0/0"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:textColor="#000000" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
	</RelativeLayout>

	<ListView android:id="@+id/my_playlist_listview"
		android:layout_marginLeft="0dp" android:layout_marginRight="0dp"
		android:fadingEdge="none" android:divider="#00000000" android:dividerHeight="0dp"
		android:cacheColorHint="#00000000" android:layout_below="@id/my_playlist_region_top"
		android:layout_above="@id/my_playlist_region_botton"
		android:listSelector="@android:color/transparent"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
	</ListView>
</RelativeLayout>