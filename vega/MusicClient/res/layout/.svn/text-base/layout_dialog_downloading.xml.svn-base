<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:background="#343130"
	android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent"
		android:padding="2dp" android:layout_alignParentTop="true"
		android:id="@+id/my_playlist_downloading_region_top"
		android:layout_height="@dimen/topbar_height" android:background="@drawable/bg_header">
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/my_playlist_downloading_default_btn"
			android:layout_marginLeft="5dp" android:layout_centerVertical="true"
			android:layout_alignParentLeft="true" android:background="#00000000" />
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:singleLine="true"
			android:textSize="20sp" android:textColor="@android:color/white"
			android:text="@string/my_playlist_downloading_title_txt"
			android:layout_centerInParent="true" />

		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/my_playlist_downloading_close_btn"
			android:layout_marginRight="5dp" android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:background="@drawable/selector_button_dialog_close" />
	</RelativeLayout>

	<LinearLayout android:gravity="center"
		android:layout_below="@id/my_playlist_downloading_region_top"
		android:layout_margin="20dp" android:id="@+id/my_playlist_downloading_empty"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_centerInParent="true">
		<ImageView android:src="@drawable/ic_search_large"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:layout_width="250dp" android:gravity="center"
			android:text="@string/downloading_empty_msg" android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>


	<RelativeLayout android:background="#e2e2e2"
		android:id="@+id/fixed_row" android:visibility="gone"
		android:layout_below="@id/my_playlist_downloading_empty"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<RelativeLayout android:id="@+id/fixed_row_region_first"
			android:layout_marginLeft="0dp" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:paddingLeft="10dp" android:paddingTop="15dp"
			android:paddingRight="10dp" android:paddingBottom="15dp">

			<ImageView
				android:layout_centerVertical="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true" android:background="@drawable/ic_dialog_downloading" />
		</RelativeLayout>


		<ImageView 
			android:layout_marginRight="10dp" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/ic_listview_arrow"
			android:visibility="visible" android:layout_centerVertical="true"
			android:layout_alignParentRight="true" />


		<LinearLayout android:layout_width="230dp"
			android:layout_centerVertical="true" android:layout_height="wrap_content"
			android:layout_toRightOf="@id/fixed_row_region_first" 
			android:gravity="center_vertical" android:orientation="vertical">

			<TextView android:id="@+id/fixed_row_first_txt"
				android:layout_width="215dp" android:layout_height="wrap_content"
				android:ellipsize="end" android:singleLine="true" android:text="Song&apos;s title"
				android:textColor="#333333" android:textSize="17sp" />

			<RelativeLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_centerVertical="true">


				<ProgressBar android:id="@+id/fixed_row_download_bar"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="100dp" android:layout_height="7dp"
					android:layout_centerVertical="true" android:layout_marginRight="6dp"
					android:progressDrawable="@drawable/drawable_seekbar_blue"
					android:visibility="visible" />

				<TextView android:id="@+id/fixed_row_second_txt"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginTop="3dp" android:layout_marginRight="5dp"
					android:layout_centerVertical="true" android:layout_toRightOf="@id/fixed_row_download_bar"
					android:ellipsize="end" android:singleLine="true" android:text="None"
					android:textColor="#666666" android:textSize="@dimen/textsize_small"
					android:visibility="visible" />

		

			</RelativeLayout>
		</LinearLayout>

	</RelativeLayout>
	<ImageView 
		android:layout_width="fill_parent"
		android:id="@+id/fixed_divider"
		android:layout_below="@id/fixed_row"
		android:layout_height="1dp"
		android:background="@color/popup_divider"/>

	<ListView android:id="@+id/my_playlist_downloading_listview"
		android:layout_below="@id/fixed_divider"
		android:fadingEdge="none" android:divider="@color/popup_divider"
		android:dividerHeight="1dp" android:layout_width="fill_parent"
		android:cacheColorHint="#00000000" android:layout_height="wrap_content">
	</ListView>




</RelativeLayout>