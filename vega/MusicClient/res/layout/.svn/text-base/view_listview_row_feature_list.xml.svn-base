<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/image_region"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dip" >

        <ImageView
            android:id="@+id/feature_listitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_default" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/feature_listitem_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_listview_arrow"
        android:visibility="visible" />

    <TextView
        android:id="@+id/feature_listitem_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/feature_listitem_more"
        android:layout_toRightOf="@id/image_region"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_big" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feature_listitem_title"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@id/feature_listitem_more"
        android:layout_toRightOf="@id/image_region"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/feature_listitem_first_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/listview_second_text"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:id="@+id/feature_listitem_divider"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/listview_second_text"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/feature_listitem_second_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/listview_second_text"
            android:textSize="@dimen/textsize_small" />
    </LinearLayout>

</RelativeLayout>