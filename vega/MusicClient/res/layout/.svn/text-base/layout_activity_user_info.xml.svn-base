<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_root"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header" >

        <Button
            android:id="@+id/user_info_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_back"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/user_info_apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/margin_right_default"
            android:background="@drawable/selector_button_apply"
            
            android:text="@string/apply"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/feature_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_info_back_btn"
            android:layout_toLeftOf="@id/user_info_apply_btn"
            android:text="@string/user_info"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:paddingBottom="20dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_marginLeft="11dp"
                    android:text="@string/phone"
                    android:textColor="#cccccc"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/phone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/phone_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textsize_small"
                    android:hint="@string/phone"
                    android:background="@drawable/selector_edittext_setting_user_info" />

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/phone_edt"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/name"
                    android:textColor="#cccccc"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/name_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textsize_small"
                    android:hint="@string/name"
                    android:background="@drawable/selector_edittext_setting_user_info" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/email_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_marginLeft="11dp"
                    android:text="@string/email"
                    android:textColor="#cccccc"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/email_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textsize_small"
                    android:hint="@string/email"
                    android:background="@drawable/selector_edittext_setting_user_info" />

                <TextView
                    android:id="@+id/birth_day_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/email_edt"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/birthday"
                    android:textColor="#cccccc"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/birth_day_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/birth_day_txt"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:text="23 March 1987"
                    android:visibility="gone" />
                
                <EditText
                    android:id="@+id/dob_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/birth_day_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textsize_small"
                    android:hint="@string/birthday"
                    android:focusable="false"
                    android:background="@drawable/selector_edittext_setting_user_info" />
                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/sex_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_marginLeft="11dp"
                    android:text="@string/sex"
                    android:textColor="#cccccc"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/sex_txt"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone" />
                
                <EditText
                    android:id="@+id/gender_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/sex_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textsize_small"
                    android:focusable="false"
                    android:hint="@string/sex"
                    android:background="@drawable/selector_edittext_setting_user_info" />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/gender_edt"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/address"
                    android:textColor="#cccccc"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/address_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/address_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textsize_small"
                    android:hint="@string/address"
                    android:background="@drawable/selector_edittext_setting_user_info" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>