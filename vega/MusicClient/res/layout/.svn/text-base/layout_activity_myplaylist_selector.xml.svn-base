<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:background="@drawable/bg_root"
	android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent"
		android:padding="2dp" android:layout_alignParentTop="true"
		android:id="@+id/my_playlist_selector_region_top"
		android:layout_height="wrap_content" android:background="@drawable/bg_header">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:layout_marginLeft="6dp" 
			android:id="@+id/playlist_selector_back_btn"
			android:textColor="@color/black"
			android:paddingLeft="1dp"
			android:textSize="13sp"
			android:paddingBottom="1dp"
			android:text="@string/back"
			android:background="@drawable/selector_button_back" />
		<TextView android:layout_height="wrap_content"
			android:id="@+id/my_playlist_selector_title_txt"
			android:layout_width="wrap_content" android:singleLine="true"
			android:textColor="@android:color/white" android:textSize="20sp"
			android:text="@string/my_playlist_selector_title_txt"
			android:layout_centerInParent="true" android:layout_marginRight="20dp" />
	</RelativeLayout>

	
	<RelativeLayout android:layout_alignParentBottom="true"
		android:gravity="center" android:padding="5dp" android:background="@drawable/bg_toolbar_bottom"
		android:id="@+id/my_playlist_selector_region_botton"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
				  	<LinearLayout 
	  		android:layout_width="120dp"
	  		android:layout_height="wrap_content"
	  		android:orientation="horizontal"
	  		android:id="@+id/my_playlist_selector_new_playlist_layout"
	  		android:background="@drawable/selector_button_save"
	  		android:gravity="center">
	  			<ImageView 
	  				android:layout_marginLeft="@dimen/margin_left_default"
	  				android:layout_width="wrap_content"
	  				android:layout_height="wrap_content"
	  				android:clickable="false"
	  				android:background="@drawable/ic_button_save"/>
	  			<TextView 
	  				android:clickable="false"
	  				android:layout_width="wrap_content"
	  				android:layout_marginLeft="@dimen/margin_left_default"
	  				android:layout_height="wrap_content"
	  				android:textColor="#999999"
	  				android:textSize="12sp"
	  				android:text="@string/create_playlist"/>	
	  	</LinearLayout>	
	</RelativeLayout>

	<ListView android:id="@+id/my_playlist_selector_listview"
		android:layout_below="@id/my_playlist_selector_region_top"
		android:divider="#00000000"
		android:layout_marginLeft="1dp"
		android:layout_marginRight="1dp"
		android:fadingEdge="none"
		android:listSelector="@android:color/transparent"
		android:layout_above="@id/my_playlist_selector_region_botton"
		android:layout_width="fill_parent" android:cacheColorHint="#00000000"
		android:layout_height="wrap_content">
	</ListView>
</RelativeLayout>