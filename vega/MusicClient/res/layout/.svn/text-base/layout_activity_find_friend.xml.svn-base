<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_root"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/find_friend_region_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:padding="2dp" >

        <Button
            android:id="@+id/find_friend_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_back"
            android:paddingBottom="1dp"
            android:text="@string/back"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/find_friend_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="@string/find_friend"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/find_friend_notification_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@drawable/bg_button_notification_normal"
            android:text="9"
            android:textColor="#bd2020"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/find_friend_via_chacha_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_find_friend_chacha"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:text="@string/find_friend_via_chacha"
        android:textColor="#333333" />

    <Button
        android:id="@+id/find_friend_via_facebook_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_button_find_friend_facebook"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:text="@string/find_friend_via_facebook"
        android:textColor="#333333"
        android:visibility="visible" />

    <Button
        android:id="@+id/find_friend_via_gmail_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/selector_button_find_friend_gmail"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:text="@string/find_friend_via_gmail"
        android:textColor="#333333"
        android:visibility="gone" />

</LinearLayout>