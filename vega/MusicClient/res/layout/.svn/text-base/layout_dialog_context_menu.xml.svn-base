<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/popup_bg" >

    <RelativeLayout
        android:id="@+id/common_context_menu_region_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbar_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_header" >

        <Button
            android:id="@+id/common_context_menu_default_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:visibility="visible" />

        <Button
            android:id="@+id/common_context_menu_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_button_dialog_close"/>

        <TextView
            android:id="@+id/common_context_menu_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/common_context_menu_default_btn"
            android:layout_toLeftOf="@id/common_context_menu_close_btn"
            android:ellipsize="end"
            android:gravity="center"        
            android:singleLine="true"
            android:text="Ten bai hat"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/common_context_menu_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:layout_below="@id/common_context_menu_region_top"
        android:divider="@color/popup_divider"
        android:dividerHeight="1dp" >
    </ListView>

</RelativeLayout>