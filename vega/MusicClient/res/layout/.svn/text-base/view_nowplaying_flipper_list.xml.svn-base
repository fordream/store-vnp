<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tlv="http://schemas.android.com/apk/res/vn.com.vega.chacha"
    android:id="@+id/now_playing_flipper_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.commonsware.cwac.tlv.TouchListView
        android:id="@+id/now_playing_list_view_song"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/nowplaying_bottom_bar"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:clipChildren="true"
        android:divider="#00000000"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:drawSelectorOnTop="false"
		tlv:normal_height="60dip"
	 	tlv:expanded_height="60dip"
		tlv:grabber="@+id/list_song_item_grabber"
		tlv:remove_mode="none" >
    </com.commonsware.cwac.tlv.TouchListView>

    <RelativeLayout
        android:id="@+id/nowplaying_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_player_list_toolbar" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_default" >

            <Button
                android:id="@+id/nowplaying_left_playlist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_button_nowplaying_list_clear" />

            <Button
                android:id="@+id/nowplaying_center_playlist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_button_nowplaying_list_save" />

            <Button
                android:id="@+id/nowplaying_right_playlist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_nowplaying_list_edit" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>