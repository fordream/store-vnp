<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content">
  	<RelativeLayout 
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:background="@null" > 
  		
  		<RelativeLayout 
  			android:id="@+id/thumbnail_region"
  			android:layout_width="wrap_content"
  			android:padding="0dp"
  			android:layout_alignParentLeft="true"
  			android:layout_height="wrap_content">
  			<ImageView 
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:background="@drawable/bg_thumbnail"
	  		android:layout_centerInParent="true"/>
  	
	  		<ImageView 
	  		android:id="@+id/feature_album_detail_icon"
	  		android:layout_width="@dimen/album_cover_width"
	  		android:layout_height="@dimen/album_cover_height"
	  		android:background="@drawable/ic_album_default"
	  		android:layout_centerInParent="true"/>
  		</RelativeLayout>
  		
	  		
	  	<TextView 
	  		android:id="@+id/feature_album_detail_title"
	  		android:layout_toRightOf="@id/thumbnail_region"
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:layout_marginLeft="@dimen/margin_left_default"
	  		android:layout_marginTop="@dimen/margin_top_default"
	  		android:textSize="@dimen/textsize_title_bar"
	  		android:singleLine="true"
	  		android:text="Album title"
	  		android:textColor="@color/text_color" />	
	
		<TextView 
	  		android:id="@+id/feature_album_detail_info"
	  		android:layout_below="@+id/feature_album_detail_title"
	  		android:layout_toRightOf="@id/thumbnail_region"
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:text="by artist - 300 view"
	  		android:layout_marginLeft="@dimen/margin_left_default"
	  		android:layout_marginTop="@dimen/margin_top_default"
	  		android:textSize="@dimen/textsize_small"
	  		android:singleLine="true"
	  		android:textColor="@color/text_color" />
	  		
		<Button 
	   	    style="?android:attr/buttonStyleSmall"
	   	    android:text="Tải về"
	    	android:layout_width="50dp"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/bg_button_rectangle"
	    	android:visibility="visible"
	    	android:textSize="12sp"
	    	android:layout_below="@id/feature_album_detail_info"
	    	android:layout_toRightOf="@id/thumbnail_region"
	    	android:layout_marginLeft="@dimen/margin_left_default"
	    	android:layout_marginRight="@dimen/margin_default"
	    	android:layout_marginTop="@dimen/margin_top_default"
	    	android:layout_marginBottom="@dimen/margin_bottom_default"/>		
	  	<LinearLayout 
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:orientation="horizontal"
	  		android:layout_marginTop="@dimen/margin_top_default"
	  		android:layout_marginRight="10dp"
	  		android:background="@drawable/bg_button_detail"
	  		android:layout_alignParentRight="true"
	  		android:gravity="center_vertical"
	  		android:layout_below="@id/feature_album_detail_info">
	  			<ImageView 
	  				android:layout_marginLeft="@dimen/margin_left_default"
	  				android:layout_width="wrap_content"
	  				android:layout_height="wrap_content"
	  				android:background="@drawable/ic_artist"/>
	  			<TextView 
	  				android:layout_width="wrap_content"
	  				android:layout_marginLeft="@dimen/margin_left_default"
	  				android:layout_height="wrap_content"
	  				android:textColor="#000000"
	  				android:textSize="12sp"
	  				android:text="@string/artist_detail"/>	
	  	</LinearLayout>	
  	</RelativeLayout>
</LinearLayout>
