<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:background="@null"
	android:layout_height="wrap_content">
	<TextView android:layout_height="40dp"
		android:gravity="center_vertical"
		android:layout_centerInParent="true" android:layout_marginLeft="5dp"
		android:id="@+id/my_playlist_detail_numofsong_txt"
		android:layout_width="wrap_content" android:singleLine="true"
		android:textColor="@android:color/black"
		android:textSize="@dimen/textsize_default"
		android:text="Co 0 bai"
		android:layout_alignParentLeft="true" />
	<LinearLayout android:layout_width="wrap_content"
		android:orientation="horizontal" android:layout_toRightOf="@id/my_playlist_detail_numofsong_txt"
		android:gravity="right|center_vertical"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true" android:layout_marginRight="3dp"
		android:layout_height="wrap_content">
		<Button android:layout_height="40dp"
			android:layout_width="80dp" android:id="@+id/my_playlist_detail_search_btn"
			android:text="@string/my_playlist_detail_search_btn_txt" />
	</LinearLayout>
</RelativeLayout>