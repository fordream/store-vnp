<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <com.ict.library.view.CameraPreview
        android:id="@+id/shopDetailtCameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.ict.library.view.CameraPreview>

    <RelativeLayout
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shop_detail_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimens10"
            android:layout_marginLeft="@dimen/dimens10"
            android:layout_marginRight="@dimen/dimens10"
            android:layout_marginTop="@dimen/dimens15"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#73090b"
            android:textSize="@dimen/sp22" />

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="@dimen/dimens100"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginBottom="@dimen/dimens10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dimens100"
                android:layout_height="@dimen/dimens100"
                android:src="@drawable/ad_bg" />

            <Button
                android:id="@+id/button1"
                android:layout_width="@dimen/dimens100"
                android:layout_height="@dimen/dimens30"
                android:layout_below="@+id/imageView2"
                android:background="@drawable/tvuong_button_setting_selected"
                android:text="@string/call_now"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/dimens40"
                android:layout_height="@dimen/dimens40"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignParentRight="true"
                android:background="@drawable/price_badge"
                android:gravity="center"
                android:text="$ 4.99"
                android:textColor="#fefefe"
                android:textSize="@dimen/sp10" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_alignTop="@+id/linearLayout1"
            android:layout_marginBottom="@dimen/_dimens5"
            android:layout_marginLeft="@dimen/dimens10"
            android:layout_toRightOf="@+id/linearLayout1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimens10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens10"
                    android:layout_marginTop="@dimen/dimens10"
                    android:drawableLeft="@drawable/address_icon"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b46614"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/web_icon"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b46614"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens10"
                    android:layout_marginTop="@dimen/dimens10"
                    android:drawableLeft="@drawable/car"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b46614"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens10"
                    android:drawableLeft="@drawable/call"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b46614"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/shopDetail_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens5"
        android:background="@drawable/tvuong_btn_back_click" />

</RelativeLayout>