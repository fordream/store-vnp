<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens200"
        android:layout_below="@+id/coupondetail_topbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_dimens12"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/coupon_detail_img_qrcode"
            android:layout_width="@dimen/dimens150"
            android:layout_height="@dimen/dimens150"
            android:src="@drawable/ad_bg" />
    </LinearLayout>

    <com.vn.icts.wendy.view.TopBarView
        android:id="@+id/coupondetail_topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.vn.icts.wendy.view.TopBarView>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens200"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img_cupon_detail_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimens10"
        android:paddingRight="@dimen/dimens10"
        android:paddingTop="@dimen/dimens10" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="@dimen/dimens100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/coupon_detail_avatar"
                android:layout_width="@dimen/dimens100"
                android:layout_height="@dimen/dimens100"
                android:src="@drawable/ad_bg" />

            <TextView
                android:id="@+id/coupon_detail_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/heart"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#b46614"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/coupon_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/time"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#b46614"
                android:textSize="@dimen/sp10" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="@dimen/dimens100"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimens10"
            android:layout_toRightOf="@+id/LinearLayout01"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ssss"
                android:layout_alignParentTop="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/coupon_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#73090b"
                        android:textSize="@dimen/sp22" />

                    <TextView
                        android:id="@+id/coupon_detail_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimens5"
                        android:layout_marginTop="@dimen/dimens5"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/coupon_detail_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp15"
                        android:textStyle="italic|normal"
                        android:typeface="normal" />
                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/ssss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimens10" >

                <Button
                    android:id="@+id/coupon_detail_face"
                    android:layout_width="@dimen/dimens90"
                    android:layout_height="@dimen/dimens30"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/tvuong_button_face"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/coupon_detail_twitter"
                    android:layout_width="@dimen/dimens90"
                    android:layout_height="@dimen/dimens30"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/tvuong_button_twitter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>