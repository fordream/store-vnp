<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimens10" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/top_list_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mid_list_bg" >

        <RelativeLayout
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimens80"
            android:layout_height="@dimen/dimens80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimens10"
            android:background="@drawable/shop_image_border"
            android:src="@drawable/main_bg" >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens10"
                android:src="@drawable/ad_bg" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/dimens40"
                android:layout_height="@dimen/dimens15"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tape" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dimens10"
            android:layout_height="@dimen/dimens30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimens10"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_cordinate" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/dimens40"
            android:layout_height="@dimen/dimens40"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_marginBottom="@dimen/_dimens5"
            android:layout_marginRight="@dimen/_dimens5"
            android:background="@drawable/price_badge"
            android:gravity="center"
            android:text="$ 4.99"
            android:textColor="#fefefe"
            android:textSize="@dimen/sp10" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#700e0d"
                android:textSize="@dimen/sp22" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#171516"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/address_icon"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#b56714"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/web_icon"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#b56714"
                android:textSize="@dimen/sp15" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_list_bg" />

</LinearLayout>