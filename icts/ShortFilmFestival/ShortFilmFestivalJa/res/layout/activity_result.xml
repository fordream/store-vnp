<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/registrationid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Registration ID that will be send to server for using later" android:background="@drawable/banner_only" android:duplicateParentState="false" android:gravity="center" android:textColor="#123456" android:paddingLeft="80dp">

    </TextView>
    
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="no_info"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

</LinearLayout>
		