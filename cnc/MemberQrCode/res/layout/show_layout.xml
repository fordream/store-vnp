<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg4">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_vertical" android:background="@drawable/title_bar">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal">
			<TextView android:id="@+id/show_messagecore"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Your Message" android:textColor="@color/title_color"
				android:textSize="30px" android:textStyle="bold" />
		</LinearLayout>


	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="center_vertical">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:background="@drawable/form">
				<RelativeLayout android:layout_width="wrap_content"
					android:layout_height="fill_parent" android:id="@+id/relativeLayout1">
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:orientation="horizontal"
						android:layout_above="@+id/linearLayout1"
						android:layout_alignParentTop="true">
						<TextView android:id="@+id/show_message_info_correct"
							android:layout_marginLeft="20px" android:layout_height="wrap_content"
							android:textColor="@color/question_color"
							android:layout_marginTop="20px" android:layout_width="wrap_content"
							android:textStyle="bold"></TextView>
					</LinearLayout>
					<LinearLayout android:layout_height="wrap_content"
						android:orientation="horizontal" android:layout_width="fill_parent"
						android:layout_alignParentBottom="true" android:gravity="center_horizontal"
						android:id="@+id/linearLayout1">
						<ImageButton android:background="@drawable/button_show_map"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:id="@+id/btn_show"></ImageButton>
					</LinearLayout>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>