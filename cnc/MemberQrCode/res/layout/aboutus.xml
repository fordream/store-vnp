<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:orientation="vertical" android:layout_weight="150">
    </LinearLayout>

    <ScrollView android:id="@+id/scrollView1" android:layout_width="fill_parent" android:layout_height="400dip" android:layout_weight="400">
        <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
            <TextView android:paddingLeft="10dip" android:paddingRight="10dip" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="TextView" android:id="@+id/textView1" android:textColor="#ffffff"></TextView>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
