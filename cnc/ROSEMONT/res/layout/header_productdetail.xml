<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_weight="120"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout15"
                android:layout_width="match_parent"
                android:layout_height="131dip"
                android:layout_weight="131"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/LinearLayout17"
                    android:layout_width="10dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout16"
                    android:layout_width="600dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="600"
                    android:orientation="horizontal" android:gravity="bottom">

                    <TextView
                        android:id="@+id/tvNameProductDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingRight="10dip"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_1"
                        android:textStyle="bold" android:singleLine="true"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout14"
                android:layout_width="match_parent"
                android:layout_height="125dip"
                android:layout_weight="125"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout09"
                    android:layout_width="match_parent"
                    android:layout_height="131dip"
                    android:layout_weight="131"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/LinearLayout07"
                        android:layout_width="10dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout08"
                        android:layout_width="600dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="600"
                        android:gravity="top|bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/color_back" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_weight="60"
            android:orientation="horizontal" android:layout_marginBottom="10dip">

            <LinearLayout
                android:id="@+id/LinearLayout06"
                android:layout_width="12dip"
                android:layout_height="fill_parent"
                android:layout_weight="12"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout05"
                android:layout_width="197dip"
                android:layout_height="fill_parent"
                android:layout_weight="197"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_sum" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_width="16dip"
                android:layout_height="fill_parent"
                android:layout_weight="16"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="197dip"
                android:layout_height="fill_parent"
                android:layout_weight="197"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnReportAdverse"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_report" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="14dip"
                android:layout_height="fill_parent"
                android:layout_weight="14"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="197dip"
                android:layout_height="fill_parent"
                android:layout_weight="197"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnDosage"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_sum" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="15dip"
                android:layout_height="fill_parent"
                android:layout_weight="15"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSpecial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_specials"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>