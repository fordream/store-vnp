<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <org.com.cnc.rosemont.views.HeaderView
            android:id="@+id/headerView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </org.com.cnc.rosemont.views.HeaderView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="700dip"
        android:layout_weight="7"
        android:background="@drawable/bgproductby" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="20dip"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="600dip"
                    android:layout_height="match_parent"
                    android:layout_weight="600"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="20dip"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="10dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout03"
                            android:layout_width="290dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="290"
                            android:orientation="vertical" >

                            <!--
                            <org.com.cnc.rosemont.views.TextFitTextView
                                android:id="@+id/textView1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/list_product_by"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/color_list_procduct_by" />
                            -->

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/list_product_by"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/color_list_procduct_by" android:typeface="serif" android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="5dip"
                        android:layout_weight="5"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llContentProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="20dip"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContentProductListBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>