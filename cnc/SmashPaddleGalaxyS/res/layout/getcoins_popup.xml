<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:layout_gravity="center" android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_popup_getcoin"
        android:orientation="vertical" >

        <Button
            android:id="@+id/circleXGetCoins"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circlex_button"
            android:layout_gravity="right" android:layout_marginRight="-8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" android:layout_weight="130">

                <Button
                    android:id="@+id/Button02"
                    android:layout_width="70dip"
                    android:layout_height="30dip"
                    android:background="@drawable/add" android:layout_gravity="right" android:layout_marginTop="5dp" android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" android:layout_weight="130">

                <Button
                    android:id="@+id/Button05"
                    android:layout_width="70dip"
                    android:layout_height="30dip"
                    android:background="@drawable/add" android:layout_gravity="right" android:layout_marginTop="5dp" android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" android:layout_weight="130">

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="70dip"
                    android:layout_height="30dip"
                    android:background="@drawable/add" android:layout_gravity="right" android:layout_marginTop="10dp" android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" android:layout_weight="130">

                <Button
                    android:id="@+id/Button03"
                    android:layout_width="70dip"
                    android:layout_height="30dip"
                    android:background="@drawable/add" android:layout_gravity="right" android:layout_marginTop="10dp" android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical" android:layout_weight="130">

                <Button
                    android:id="@+id/Button04"
                    android:layout_width="70dip"
                    android:layout_height="30dip"
                    android:background="@drawable/add" android:layout_gravity="right" android:layout_marginTop="10dp" android:layout_marginRight="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>