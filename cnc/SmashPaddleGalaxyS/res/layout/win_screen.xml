<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_weight="120"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" android:layout_weight="100">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/big_coins" android:layout_weight="40" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:orientation="horizontal" android:layout_marginTop="15dp" android:layout_marginLeft="-30dp">

                <ImageView
                    android:id="@+id/position1Wins"
                    android:layout_width="17dp"
                    android:layout_height="40dp"
                    android:src="@drawable/small_blank" />

                <ImageView
                    android:id="@+id/position2Wins"
                    android:layout_width="17dp"
                    android:layout_height="40dp"
                    android:src="@drawable/small_blank" />

                <ImageView
                    android:id="@+id/position3Wins"
                    android:layout_width="17dp"
                    android:layout_height="40dp"
                    android:src="@drawable/small_blank" />

                <ImageView
                    android:id="@+id/position4Wins"
                    android:layout_width="17dp"
                    android:layout_height="40dp"
                    android:src="@drawable/small_blank" />

                <ImageView
                    android:id="@+id/position5Wins"
                    android:layout_width="17dp"
                    android:layout_height="40dp"
                    android:src="@drawable/small_blank" />

                <ImageView
                    android:id="@+id/position6Wins"
                    android:layout_width="17dp"
                    android:layout_height="40dp"
                    android:src="@drawable/small_blank" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_weight="185" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:orientation="vertical" android:layout_weight="50">

                <TextView
                    android:id="@+id/leftUsernameWins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sally"
                    android:textColor="#303a47"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/rightScoreWins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#303a47"
                    android:textSize="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_weight="50"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/rightUserWins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jessica"
                    android:textColor="#303a47"
                    android:textSize="18dp" android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/leftScoreWins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#303a47"
                    android:textSize="50dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/winUsername"
                android:layout_width="210dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Jessica"
                android:textSize="30dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:src="@drawable/win_label" android:layout_marginTop="40dp" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_gravity="center" android:layout_marginBottom="15dp"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_weight="230"
        android:orientation="vertical">

        <Button
            android:id="@+id/rematchButton"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/rematch" android:layout_weight="80" android:layout_gravity="center"/>

        <Button
            android:id="@+id/mainMenuButton"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/main_menu" android:layout_weight="80" android:layout_gravity="center" android:layout_marginTop="0dp"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:src="@drawable/coins_earned" android:layout_gravity="center" android:layout_marginLeft="80dp" android:layout_marginRight="80dp" android:layout_weight="35"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="100" android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_weight="90">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="horizontal" android:layout_gravity="center">

            <ImageView
                android:id="@+id/position1Earn"
                android:layout_width="29dp"
                android:layout_height="50dp"
                android:src="@drawable/blank" android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/position2Earn"
                android:layout_width="29dp"
                android:layout_height="50dp"
                android:src="@drawable/blank" android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical" android:layout_weight="80">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="180"
        android:orientation="vertical" android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:layout_weight="60" android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="80"
                android:orientation="vertical" android:layout_gravity="center">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center" android:background="@drawable/facebook" android:layout_marginTop="10dp" android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/getcoinWins"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/getcoins" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/freecoinsWins"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/freecoins" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="80"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button2"
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:background="@drawable/twitter" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="70"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</LinearLayout>