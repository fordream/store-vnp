<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/profile_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/sign_top"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+id/commonETHearder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_back"
                android:textSize="15dip"
                android:textStyle="bold"
                android:typeface="serif" android:text="@string/new_message">
            </TextView>

            <Button
                android:id="@+id/commonbtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sign_btn_back" >
            </Button>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/profile_bg"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_back"
                android:textSize="14dip"
                android:typeface="serif" >
            </TextView>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kraked"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_back"
                android:textSize="14dip"
                android:typeface="serif" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subject : "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_back"
                android:textSize="14dip"
                android:typeface="serif" >
            </TextView>

            <EditText
                android:id="@+id/EditText1"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/repply_message_et1"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:singleLine="true"
                android:text="Kraked"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_back"
                android:textSize="14dip"
                android:typeface="serif" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/LinearLayout01"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message : "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_back"
                android:textSize="14dip"
                android:typeface="serif" >
            </TextView>
        </LinearLayout>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/LinearLayout02"
            android:background="@drawable/repply_message_et"
            android:gravity="top"
            android:padding="5dip" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:background="@drawable/repply_message_btn" >
        </Button>
    </RelativeLayout>

</LinearLayout>