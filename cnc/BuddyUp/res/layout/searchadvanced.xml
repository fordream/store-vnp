<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <ScrollView android:id="@+id/scrollView1" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <LinearLayout android:id="@+id/linearLayout3" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:padding="10dip">
            <LinearLayout android:id="@+id/LinearLayout02" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                <TextView android:id="@+id/TextView02" android:layout_weight="1" android:textSize="14dip" android:text="Sport/Activity : " android:layout_width="100dp" android:typeface="serif" android:textColor="@color/bg_back" android:layout_height="wrap_content"></TextView>
                <TextView android:layout_width="180dip" android:layout_weight="1" android:paddingLeft="5dip" android:layout_height="wrap_content" android:id="@+id/search_advanced_spSportActivity" android:background="@drawable/creategroupetsp" android:textColor="@color/color_back" android:textSize="14dip" android:typeface="serif" android:gravity="center_vertical" android:text="Golf"></TextView>
            </LinearLayout>
            <LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginBottom="5dip" android:layout_marginTop="5dip">
                <TextView android:id="@+id/TextView01" android:layout_weight="1" android:textSize="14dip" android:text="Day : " android:layout_width="100dp" android:typeface="serif" android:textColor="@color/bg_back" android:layout_height="wrap_content"></TextView>
                <TextView android:layout_width="180dip" android:layout_weight="1" android:paddingLeft="5dip" android:layout_height="wrap_content" android:id="@+id/search_advanced_spDay" android:background="@drawable/creategroupetsp" android:textColor="@color/bg_back" android:textSize="14dip" android:typeface="serif" android:gravity="center_vertical" android:text="Sun"></TextView>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                <TextView android:id="@+id/textView1" android:layout_weight="1" android:textSize="14dip" android:text="Time : " android:layout_width="100dp" android:typeface="serif" android:textColor="@color/bg_back" android:layout_height="wrap_content"></TextView>
                <TextView android:layout_width="180dip" android:layout_weight="1" android:paddingLeft="5dip" android:layout_height="wrap_content" android:id="@+id/search_advanced_spTime" android:background="@drawable/creategroupetsp" android:textColor="@color/color_back" android:textSize="14dip" android:typeface="serif" android:gravity="center_vertical" android:text="Morning"></TextView>
            </LinearLayout>
            <LinearLayout android:id="@+id/LinearLayout03" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginTop="5dip" android:layout_marginBottom="5dip">
                <TextView android:id="@+id/TextView03" android:layout_weight="1" android:textSize="14dip" android:text="Philosophy : " android:layout_width="100dp" android:typeface="serif" android:textColor="@color/bg_back" android:layout_height="wrap_content"></TextView>
                <TextView android:layout_width="180dip" android:layout_weight="1" android:paddingLeft="5dip" android:layout_height="wrap_content" android:id="@+id/search_advanced_spPhilosophy" android:background="@drawable/creategroupetsp" android:textSize="14dip" android:typeface="serif" android:textColor="@color/color_back" android:gravity="center_vertical" android:text="@string/sss"></TextView>
            </LinearLayout>
            <LinearLayout android:id="@+id/LinearLayout06" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginBottom="5dip">
                <TextView android:id="@+id/TextView06" android:layout_weight="1" android:text="Maximum Distance : " android:typeface="serif" android:textColor="@color/bg_back" android:layout_height="wrap_content" android:layout_width="120dp" android:textSize="13dip"></TextView>
                <EditText android:paddingRight="5dip" android:layout_weight="1" android:typeface="serif" android:textColor="@color/bg_back" android:background="@drawable/bget" android:layout_height="wrap_content" android:paddingLeft="5dip" android:textSize="14dip" android:singleLine="true" android:layout_width="150dip" android:gravity="center" android:text="10" android:id="@+id/search_advanced_etMaximumDistance"></EditText>
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content" android:gravity="center_vertical" android:id="@+id/LinearLayout04" android:layout_width="fill_parent">
                <TextView android:typeface="serif" android:layout_height="wrap_content" android:id="@+id/TextView04" android:textColor="@color/bg_back" android:layout_weight="1" android:textSize="14dip" android:layout_width="100dp" android:text="Gender : "></TextView>
                <TextView android:typeface="serif" android:layout_height="wrap_content" android:paddingLeft="5dip" android:id="@+id/search_advanced_spSkillLevel" android:background="@drawable/creategroupetsp" android:textColor="@color/color_back" android:gravity="center_vertical" android:layout_weight="1" android:textSize="14dip" android:layout_width="180dip" android:text="Any"></TextView>
            </LinearLayout>
            <LinearLayout android:id="@+id/LinearLayout07" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:layout_marginTop="15dip" android:layout_marginBottom="15dip">
                <CheckBox android:textSize="14dip" android:textColor="@color/bg_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:typeface="serif" android:button="@drawable/checkbox" android:id="@+id/search_advanced_cBSkipDistance" android:text="Skip Distance Calculation ?"></CheckBox>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearLayout2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
                <Button android:id="@+id/search_advanced_btnsearch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/btnsearch"></Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
