<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="60dip" android:gravity="center_vertical">
	
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="60dip"
		android:gravity="center_vertical" android:paddingLeft="10dip">
		<TextView android:text="TextView" android:id="@+id/textView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:typeface="serif" android:textSize="14dip"
			android:layout_marginLeft="10dip" android:textColor="#000000"
			android:textStyle="bold"></TextView>
		<TextView android:id="@+id/textView2" android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:text="TextView" android:typeface="serif"
			android:layout_marginLeft="10dip" android:textStyle="bold" android:textSize="14dip"></TextView>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout01" android:background="@drawable/line" android:orientation="vertical" android:layout_height="1dip" android:layout_width="fill_parent" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"></LinearLayout>
</RelativeLayout>
