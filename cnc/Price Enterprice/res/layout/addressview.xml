<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg">
	<RelativeLayout android:id="@+id/relativeLayout1"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical" android:id="@+id/linearLayout4"
			android:layout_width="fill_parent" android:layout_height="20dip"
			android:layout_marginTop="10dip">
			<TextView android:layout_width="wrap_content"
				android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#717171"
				android:layout_marginRight="5dip" android:layout_height="wrap_content"
				android:typeface="serif" android:layout_marginLeft="20dip"
				android:id="@+id/tVStoreName"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" android:orientation="vertical"
			android:layout_alignParentRight="true" android:layout_above="@+id/linearLayout4"
			android:layout_marginBottom="10dip" android:layout_marginLeft="20dip"
			android:layout_marginRight="10dip" android:layout_below="@+id/linearLayout4"
			android:layout_height="120dip">
			<RelativeLayout android:id="@+id/relativeLayout5"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginBottom="5dip">

				<ImageButton
				    android:id="@+id/imgBtnWebsite"
				    android:layout_width="106dip"
				    android:layout_height="35dip"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentTop="true"
				    android:layout_marginLeft="5dip"
				    android:background="@drawable/website_indicator" >
</ImageButton>

				<RelativeLayout
				    android:id="@+id/relativeLayout3"
				    android:layout_width="fill_parent"
				    android:layout_height="80dip"
				    android:layout_alignParentTop="true"
				    android:layout_below="@+id/textView3"
				    android:layout_toLeftOf="@+id/imgBtnWebsite"
				    android:layout_toRightOf="@+id/textView3" >

					<LinearLayout
					    android:id="@+id/linearLayout7"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:orientation="horizontal" >

						<ImageView
						    android:id="@+id/imgStore"
						    android:layout_width="120dip"
						    android:layout_height="80dip"
						    android:scaleType="centerInside" />

					</LinearLayout>

				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/relativeLayout4"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="#717171" android:layout_alignParentLeft="true" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_alignParentTop="true"
					android:layout_marginTop="2dip" android:textSize="11dip"
					android:id="@+id/tVCommen"></TextView>
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/linearLayout5"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/linearLayout1"
		    android:layout_marginBottom="5dip"
		    android:orientation="vertical"
		    android:paddingLeft="20dip" >

			<TextView android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:typeface="serif" android:textSize="11dip" android:textColor="#fa0c11"
				android:id="@+id/textView1"></TextView>
			<LinearLayout android:layout_width="fill_parent"
				android:id="@+id/linearLayout6" android:layout_height="wrap_content"
				android:orientation="vertical" android:gravity="right"
				android:paddingRight="10dip">

				<Button
				    android:id="@+id/button1"
				    android:layout_width="135dip"
				    android:layout_height="35dip"
				    android:background="@drawable/btn_indicator"
				    android:paddingLeft="5dip"
				    android:paddingRight="5dip"
				    android:text="@string/showall" >
</Button>
			</LinearLayout>
		</LinearLayout>
		<RelativeLayout android:layout_height="wrap_content"
			android:id="@+id/relativeLayout2" android:layout_alignParentLeft="true"
			android:layout_width="fill_parent" android:layout_below="@+id/linearLayout5">
			<LinearLayout android:id="@+id/linearLayout2"
				android:layout_centerVertical="true" android:layout_alignParentLeft="true"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:gravity="right" android:paddingRight="10dip">

				<Button
				    android:id="@+id/btnEstado"
				    android:layout_width="80dip"
				    android:layout_height="35dip"
				    android:background="@drawable/btn_indicator_selected"
				    android:text="@string/estado" >
</Button>

				<Button
				    android:id="@+id/btnCidade"
				    android:layout_width="80dip"
				    android:layout_height="35dip"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:background="@drawable/btn_indicator"
				    android:text="@string/cidade" >
</Button>

				<Button
				    android:id="@+id/btnBairro"
				    android:layout_width="135dip"
				    android:layout_height="35dip"
				    android:background="@drawable/btn_indicator"
				    android:paddingLeft="3dip"
				    android:paddingRight="3dip"
				    android:text="@string/bairro" >
</Button>
			</LinearLayout>
		</RelativeLayout>
		<!-- <ListView android:divider="#c0cdd8" android:dividerHeight="1.0sp" 
			android:layout_width="fill_parent" android:layout_alignParentLeft="true" 
			android:id="@+id/lVAddress" android:layout_alignParentBottom="true" android:layout_below="@+id/linearLayout3" 
			android:layout_height="wrap_content"></ListView> -->

		<LinearLayout 
			 android:layout_width="fill_parent"
			android:layout_alignParentLeft="true" android:id="@+id/lVAddress"
			android:layout_alignParentBottom="true" android:layout_below="@+id/linearLayout3" android:layout_height="wrap_content" android:orientation="vertical"></LinearLayout>


		<LinearLayout android:orientation="vertical" android:id="@+id/linearLayout3"
			android:layout_width="fill_parent" android:layout_alignParentLeft="true"
			android:layout_height="1dip" android:background="@drawable/line"
			android:layout_below="@+id/relativeLayout2" android:layout_marginTop="10dip"></LinearLayout>
	</RelativeLayout>


</ScrollView>
