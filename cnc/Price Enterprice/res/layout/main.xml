<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout1"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	
	android:layout_height="fill_parent">

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:orientation="horizontal" >

		<TableLayout 
			android:layout_height="fill_parent" 
			
			android:id="@+id/tableLayout1" android:layout_width="fill_parent">
			<TableRow android:id="@+id/tableRow1" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1">
				<com.cnc.maispreco.views.TabView android:id="@+id/tabView1" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="fill_parent"></com.cnc.maispreco.views.TabView>
				<com.cnc.maispreco.views.TabView android:id="@+id/tabView2" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="fill_parent"></com.cnc.maispreco.views.TabView>
				<com.cnc.maispreco.views.TabView android:id="@+id/tabView3" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="fill_parent"></com.cnc.maispreco.views.TabView>
				<com.cnc.maispreco.views.TabView android:id="@+id/tabView4" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="fill_parent"></com.cnc.maispreco.views.TabView>
			</TableRow>
		</TableLayout>
	</LinearLayout>
	<RelativeLayout android:id="@+id/rlBanner"
		android:layout_width="fill_parent" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:layout_height="43dip">

		<ImageView
		    android:id="@+id/imageView1"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" android:background="@drawable/bg_banner"/>

		<ImageView
		    android:id="@+id/ImageView01"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/banner_mais" android:layout_centerInParent="true"/>

		<ImageView android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentLeft="true" android:layout_height="fill_parent" android:background="@color/transparent" android:id="@+id/imgBanner"></ImageView>
		<ImageView android:id="@+id/imgBack" android:background="@drawable/back_indicator" android:layout_centerVertical="true" android:layout_alignParentLeft="true" android:layout_marginLeft="10dip" android:layout_width="62dip" android:layout_height="30dip"></ImageView>

	</RelativeLayout>
	<RelativeLayout android:id="@+id/rlSearch"
		android:layout_width="fill_parent" android:layout_alignParentLeft="true"
		android:layout_below="@+id/rlBanner" android:background="@drawable/bgsearch" android:layout_height="40dip">
		<EditText android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/etSearch"
			android:imeOptions="actionSearch"
			android:singleLine="true" android:layout_centerVertical="true" android:layout_toRightOf="@+id/imageView2" android:background="@drawable/search_02" android:layout_width="fill_parent" android:layout_height="30dip" android:hint="@string/search_product" android:layout_toLeftOf="@+id/imgSearch"/>
		<ImageView android:layout_alignParentRight="true" android:id="@+id/imgSearch"
			android:layout_centerVertical="true" android:layout_height="30dip" android:layout_marginRight="5dip" android:background="@drawable/x" android:layout_width="25dp"></ImageView>
		<ImageView android:id="@+id/imageView2" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_height="30dip" android:background="@drawable/search_01" android:layout_width="23dip" android:layout_marginLeft="5dip"></ImageView>
		<ImageView android:id="@+id/imageView3" android:layout_toLeftOf="@+id/imgSearch" android:layout_centerVertical="true" android:background="@drawable/search_03" android:layout_height="30dip" android:layout_width="15dip" android:visibility="gone"></ImageView>


	</RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent" android:layout_alignParentLeft="true" android:layout_below="@+id/rlSearch" android:background="@drawable/bgbarcode" android:id="@+id/rlBarcode" android:layout_height="35dip">
		<RelativeLayout android:id="@+id/relativeLayout2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_toLeftOf="@+id/linearLayout2" android:layout_centerInParent="true">
			<ImageView android:id="@+id/imgBarcode" android:layout_marginRight="5dip" android:background="@drawable/barcode_indicator" android:layout_height="25dip" android:layout_width="30dip"></ImageView>
			<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_centerVertical="true" android:layout_toRightOf="@+id/imgBarcode" android:textStyle="bold" android:textColor="@color/barcode_color" android:text="@string/scanabarcode"></TextView>
		</RelativeLayout>
	</RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent" android:background="@drawable/bgstatus" android:layout_below="@+id/rlBarcode" android:layout_alignParentLeft="true" android:id="@+id/rlStatus" android:layout_height="29dip">
		<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:id="@+id/tVStatus" android:layout_centerInParent="true" android:textColor="@color/status" android:textStyle="bold" android:textSize="13dip" android:text="@string/top_search"></TextView>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/relativeLayout4" android:layout_width="fill_parent" android:layout_height="wrap_content"></RelativeLayout>
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_alignParentLeft="true" android:id="@+id/llContent" android:layout_above="@+id/linearLayout1" android:layout_below="@+id/rlStatus" android:layout_height="fill_parent" android:background="#ffffff"></LinearLayout>



</RelativeLayout>
  
