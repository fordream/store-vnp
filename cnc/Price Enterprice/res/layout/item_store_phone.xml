<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="110dp"
        android:background="@drawable/phonenumbackground"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:typeface="serif" >
</TextView>

    <Button
        android:id="@+id/button1"
        android:layout_width="106dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/imgbtncall" >
</Button>
    <Button android:id="@+id/button2" android:layout_centerVertical="true" android:layout_toLeftOf="@+id/button1" android:background="@drawable/btnedit" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_height="30dip" android:layout_width="30dip" android:visibility="gone"></Button>
    
</RelativeLayout>
